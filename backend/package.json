{
  "name": "mvm_finance_backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Mvm Finance handling in NodeJs with Express",
  "main": "app.js",
  "author": "Melvin van Megen",
  "license": "ISC",
  "private": true,
  "scripts": {
    "test": "test",
    "start": "yarn run prisma_generate && concurrently npm:serve npm:prisma_deploy npm:apiclient_watch",
    "serve": "nodemon -r dotenv/config server.js --quiet --colors",
    "prisma_generate": "node ./scripts/generatePrismaClient.js",
    "prisma_deploy": "echo Applying migrations ... && prisma migrate deploy >> ./node_modules/.prisma/logs.txt",
    "prisma_migrate": "prisma migrate dev",
    "prisma_watch": "prisma generate --watch",
    "apiclient_generate": "node ./scripts/generateApiClient.js",
    "apiclient_watch": "chokidar \"./api/**/*.js\" --silent --initial  -c \"node ./scripts/generateApiClient.js\"",
    "redis": "redis-server --port 6360",
    "build": "npx tsc",
    "lint": "eslint . --ignore-path .gitignore",
    "fix": "eslint . --fix --ignore-path .gitignore && prettier --write .",
    "format": "prettier --write ."
  },
  "keywords": [
    "NodeJs",
    "Express"
  ],
  "dependencies": {
    "@fastify/cookie": "^8.3.0",
    "@fastify/cors": "^8.3.0",
    "@fastify/jwt": "^7.2.0",
    "@fastify/multipart": "^7.6.1",
    "@prisma/client": "5.1.1",
    "@sendinblue/client": "^3.2.2",
    "axios": "^0.27.2",
    "bcryptjs": "^2.4.3",
    "csv": "^6.1.0",
    "dayjs": "^1.11.9",
    "fastify": "^4.19.2",
    "glob": "^8.1.0",
    "nanoid": "^4.0.2",
    "pdfkit": "^0.12.3",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "pino-pretty": "^10.0.0",
    "redis": "4.5.0",
    "stripe": "^12.4.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/glob": "^8.0.0",
    "@types/node": "^18.11.9",
    "@types/pdfkit": "^0.12.8",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.8.8",
    "prisma": "^5.1.1",
    "typescript": "^4.8.4"
  }
}
