{
  "name": "mvm_finance_backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Mvm Finance handling in NodeJs with Express",
  "main": "app.js",
  "author": "Melvin van Megen",
  "license": "ISC",
  "private": true,
  "scripts": {
    "test": "test",
    "dev": "yarn run prisma_generate && concurrently npm:serve npm:prisma_deploy npm:watch",
    "serve": "nodemon -q dist/app.js",
    "watch": "npx tsc --watch",
    "prisma_generate": "node ./scripts/generatePrismaClient.js",
    "prisma_deploy": "echo Applying migrations ... && prisma migrate deploy",
    "prisma_migrate": "prisma migrate dev",
    "prisma_watch": "prisma generate --watch",
    "redis": "redis-server --port 6360",
    "start": "node dist/app.js",
    "build": "npx tsc",
    "lint": "eslint . --ignore-path .gitignore",
    "fix": "eslint . --fix --ignore-path .gitignore && prettier --write .",
    "format": "prettier --write ."
  },
  "keywords": [
    "NodeJs",
    "Express"
  ],
  "dependencies": {
    "@prisma/client": "4.16.1",
    "@sendinblue/client": "^3.2.2",
    "axios": "^0.27.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv": "^6.1.0",
    "dotenv": "^16.0.2",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-basic-auth": "^1.2.1",
    "express-jwt": "^8.4.0",
    "glob": "^7.1.6",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pdfkit": "^0.12.3",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "redis": "4.5.0",
    "stripe": "^12.4.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/glob": "^8.0.0",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.11.9",
    "@types/pdfkit": "^0.12.8",
    "concurrently": "^8.2.0",
    "nodemon": "^2.0.12",
    "prisma": "^4.16.1",
    "typescript": "^4.8.4",
    "prettier": "^2.8.8",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0"
  }
}
